<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="root" stylesheets="graph-style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EulerController">
    <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
                <AnchorPane prefHeight="400.0" prefWidth="420.0">
                    <children>
                  <ScatterChart fx:id="scatterChart" animated="false" legendVisible="false">
                    <xAxis>
                        <NumberAxis autoRanging="false" lowerBound="-2.5" side="BOTTOM" tickUnit="1" upperBound="2.5" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis autoRanging="false" lowerBound="-2.5" side="BOTTOM" tickUnit="1" upperBound="2.5" />
                    </yAxis>
                  </ScatterChart>
                    </children>
                </AnchorPane>
            <Slider fx:id="frequencySlider" blockIncrement="0.5" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
         </children>
      </VBox>
    </children>
</AnchorPane>
